@inject IJSRuntime JSRuntime
@inject KlodTattooBlazor.Services.LocalizationService Localization
@implements IDisposable

@if (isVisible)
{
    <div class="cookie-consent-banner">
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-lg-8 mb-3 mb-lg-0">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-cookie-bite text-warning fs-3 me-3 mt-1"></i>
                        <p class="mb-0 text-light small">
                            @Localization["CookieBanner_Text"] 
                            <a href="/cookie" class="text-warning text-decoration-none">@Localization["CookieBanner_Link"]</a>.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <button class="btn btn-sm btn-outline-light me-2" @onclick="DeclineCookies">
                        @Localization["CookieBanner_Decline"]
                    </button>
                    <button class="btn btn-sm btn-gold" @onclick="AcceptCookies">
                        @Localization["CookieBanner_Accept"]
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .cookie-consent-banner {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: rgba(20, 20, 20, 0.95);
        border-top: 1px solid #d4af37;
        z-index: 9999;
        box-shadow: 0 -5px 20px rgba(0,0,0,0.5);
        backdrop-filter: blur(10px);
        animation: slideUp 0.5s ease-out;
    }

    .btn-gold {
        background-color: #d4af37;
        color: #000;
        border: none;
        font-weight: 600;
        transition: all 0.2s;
    }

    .btn-gold:hover {
        background-color: #f7ce5a;
        transform: translateY(-2px);
    }

    @@keyframes slideUp {
        from { transform: translateY(100%); }
        to { transform: translateY(0); }
    }
</style>

@code {
    private bool isVisible = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var consent = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "cookieConsent");
            if (string.IsNullOrEmpty(consent))
            {
                isVisible = true;
                StateHasChanged();
            }
        }
    }

    private async Task AcceptCookies()
    {
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "cookieConsent", "true");
        isVisible = false;
    }

    private async Task DeclineCookies()
    {
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "cookieConsent", "false");
        isVisible = false;
    }

    protected override void OnInitialized()
    {
        Localization.OnCultureChanged += StateHasChanged;
    }

    public void Dispose()
    {
        Localization.OnCultureChanged -= StateHasChanged;
    }
}
