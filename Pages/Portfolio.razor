@page "/portfolio"
@inject IJSRuntime JS
@inject KlodTattooBlazor.Services.LocalizationService Localization
@implements IDisposable

<PageTitle>@Localization["Portfolio_PageTitle"] - Klod Tattoo Studio</PageTitle>

<div class="container-fluid py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-uppercase mb-3" style="color: #d4af37;">@Localization["Portfolio_Title"]</h1>
        <p class="lead text-muted">@Localization["Portfolio_Subtitle"]</p>
        <div class="golden-underline mx-auto mt-3" style="width: 80px; height: 4px; background-color: #d4af37;"></div>
    </div>

    <!-- Filter Buttons -->
    <div class="text-center mb-5">
        <div class="btn-group flex-wrap" role="group">
            @foreach (var filter in FilterOptions)
            {
                <button type="button" 
                        class="btn @(SelectedFilter == filter.Key ? "btn-gold" : "btn-outline-gold")" 
                        @onclick="@(() => FilterPortfolio(filter.Key))">
                    @Localization[filter.Value]
                </button>
            }
        </div>
    </div>

    <!-- Portfolio Grid -->
    <div class="row g-4 portfolio-grid">
        @if (FilteredImages.Any())
        {
            @foreach (var item in FilteredImages)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="portfolio-item position-relative overflow-hidden rounded shadow-lg">
                        <img src="@item.ImageUrl" alt="@Localization[item.Title]" class="img-fluid w-100" style="aspect-ratio: 1; object-fit: cover;" />
                        <div class="portfolio-overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-end p-4">
                            <h3 class="h5 text-white mb-2">@Localization[item.Title]</h3>
                            <p class="small text-white-50 mb-0">@Localization[$"Portfolio_Filter_{item.TattooStyle?.Name ?? "Unknown"}"]</p>
                            <a href="@item.ImageUrl" class="glightbox position-absolute top-0 start-0 w-100 h-100" data-gallery="gallery1">
                                <span class="visually-hidden">View @Localization[item.Title]</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <p class="text-muted">@Localization["Portfolio_Empty"]</p>
            </div>
        }
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5 pt-5">
        <div class="card shadow-lg border-0 mx-auto p-5" style="max-width: 600px; background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
            <h2 class="h4 text-dark mb-3">
                <i class="fas fa-calendar-check me-2"></i>@Localization["Portfolio_CTA_Title"]
            </h2>
            <p class="text-dark mb-4">
                @Localization["Portfolio_CTA_Text"]
            </p>
            <a href="/booking" class="btn btn-dark btn-lg px-5 py-3 rounded-pill shadow">
                <i class="fas fa-calendar-plus me-2"></i>@Localization["Portfolio_CTA_Button"]
            </a>
        </div>
    </div>
</div>



@inject KlodTattooBlazor.Services.PortfolioService PortfolioService

@code {
    private string SelectedFilter = "all";
    private List<PortfolioItem> AllImages = new();

    private static readonly Dictionary<string, string> FilterOptions = new()
    {
        { "all", "Portfolio_Filter_All" },
        { "realistic", "Portfolio_Filter_Realistic" },
        { "traditional", "Portfolio_Filter_Traditional" },
        { "blackwork", "Portfolio_Filter_Blackwork" },
        { "cartoons", "Portfolio_Filter_Cartoons" }
    };

    private List<PortfolioItem> FilteredImages => SelectedFilter == "all" 
        ? AllImages 
        : AllImages.Where(i => i.TattooStyle?.Name.ToLower() == SelectedFilter).ToList();

    private void FilterPortfolio(string filter)
    {
        SelectedFilter = filter;
    }

    protected override async Task OnInitializedAsync()
    {
        Localization.OnCultureChanged += StateHasChanged;
        try 
        {
            AllImages = await PortfolioService.GetAllItemsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading portfolio: {ex.Message}");
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize GLightbox for portfolio gallery
            await JS.InvokeVoidAsync("initGLightbox");
        }
        else 
        {
            // Re-init lightbox when filter changes and DOM updates
            await JS.InvokeVoidAsync("initGLightbox");
        }
    }

    public void Dispose()
    {
        Localization.OnCultureChanged -= StateHasChanged;
    }
}
