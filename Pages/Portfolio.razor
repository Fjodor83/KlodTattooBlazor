@page "/portfolio"
@inject PortfolioService PortfolioService
@inject IJSRuntime JS

<PageTitle>Portfolio - Klod Tattoo</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-uppercase" style="color: #d4af37;">Portfolio</h1>
        <p class="lead text-muted">Browse our latest  tattoo works</p>
        <div style="width: 60px; height: 3px; background-color: #d4af37; margin: 20px auto;"></div>
    </div>

    <!-- FILTERS -->
    <div class="text-center mb-4">
        <button class="btn btn-outline-light btn-sm me-2 mb-2 @(string.IsNullOrEmpty(_selectedStyle) ? "active" : "")" @onclick="() => FilterByStyle(null)">
            All
        </button>
        @foreach (var style in _styles)
        {
            <button class="btn btn-outline-light btn-sm me-2 mb-2 @(style == _selectedStyle ? "active" : "")" @onclick="() => FilterByStyle(style)">
                @style
            </button>
        }
    </div>

    @if (_loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-warning" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (_portfolioItems == null || !_portfolioItems.Any())
    {
        <div class="alert alert-warning text-center">
            No portfolio items found. Please add tattoo images to the <code>wwwroot/data/portfolio.json</code> file.
        </div>
    }
    else
    {
        <div class="row g-4 portfolio-container">
            @foreach (var item in _portfolioItems)
            {
                <div class="col-md-4 col-lg-3 portfolio-item">
                    <div class="position-relative overflow-hidden rounded shadow-sm" style="height: 300px; cursor: pointer;">
                        <a href="@item.ImageUrl" class="glightbox" data-gallery="tattoo-gallery" data-title="@item.Title">
                            <img src="@item.ImageUrl" class="w-100 h-100" alt="@item.Title" loading="lazy" style="object-fit: cover; transition: transform 0.6s ease;" />
                        </a>
                        
                        <div class="portfolio-overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-center align-items-center text-center p-3"
                             style="background: rgba(0,0,0,0.85); opacity: 0; transition: opacity 0.4s ease;">
                            <h5 class="text-uppercase mb-2" style="color: #d4af37;">@item.Title</h5>
                            <p class="text-white small mb-3">@item.TattooStyle?.Name</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .portfolio-item:hover img {
        transform: scale(1.12);
    }

    .portfolio-item:hover .portfolio-overlay {
        opacity: 1 !important;
    }

    .btn-outline-light.active {
        background-color: #d4af37;
        color: #1e1e1e;
        border-color: #d4af37;
    }
</style>

@code {
    private List<PortfolioItem> _portfolioItems = new();
    private List<string> _styles = new();
    private string? _selectedStyle;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPortfolioAsync();
        await InitializeGLightbox();
    }

    private async Task LoadPortfolioAsync()
    {
        _loading = true;
        try
        {
            _portfolioItems = await PortfolioService.GetAllItemsAsync();
            _styles = await PortfolioService.GetAllStylesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading portfolio: {ex.Message}");
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task FilterByStyle(string? styleName)
    {
        _selectedStyle = styleName;
        if (string.IsNullOrEmpty(styleName))
        {
            _portfolioItems = await PortfolioService.GetAllItemsAsync();
        }
        else
        {
            _portfolioItems = await PortfolioService.GetItemsByStyleAsync(styleName);
        }
        StateHasChanged();
        await Task.Delay(100); // Give time for DOM to update
        await InitializeGLightbox();
    }

    private async Task InitializeGLightbox()
    {
        await JS.InvokeVoidAsync("eval", @"
            if (typeof GLightbox !== 'undefined') {
                const lightbox = GLightbox({ 
                    touchNavigation: true, 
                    loop: true, 
                    closeButton: true, 
                    zoomable: true 
                });
            }
        ");
    }
}
