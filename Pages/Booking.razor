@page "/booking"
@inject KlodTattooBlazor.Services.LocalizationService Localization
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>@Localization["Booking_PageTitle"] - Klod Tattoo Studio</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-uppercase mb-3" style="color: #d4af37;">@Localization["Booking_Title"]</h1>
        <p class="lead text-muted">@Localization["Booking_Subtitle"]</p>
        <div class="golden-underline mx-auto mt-3" style="width: 80px; height: 4px; background-color: #d4af37;"></div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 p-4" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                <div class="card-body">
                    @if (ShowSuccessMessage)
                    {
                        <div class="alert alert-success mb-4" style="background: rgba(40, 167, 69, 0.2); border-left: 4px solid #28a745;">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>@Localization["Booking_Success"]</strong>
                        </div>
                    }

                    @if (ShowErrorMessage)
                    {
                        <div class="alert alert-danger mb-4" style="background: rgba(220, 53, 69, 0.2); border-left: 4px solid #dc3545;">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>@Localization["Booking_Error"]</strong>
                        </div>
                    }

                    <form @onsubmit="HandleSubmit" @onsubmit:preventDefault>
                        <div class="row g-4">
                            <!-- Personal Information -->
                            <div class="col-12">
                                <h2 class="h5 mb-3" style="color: #d4af37;">
                                    <i class="fas fa-user me-2"></i>@Localization["Booking_PersonalInfo_Title"]
                                </h2>
                            </div>

                            <div class="col-md-6">
                                <label for="name" class="form-label text-light">@Localization["Booking_Name_Label"]</label>
                                <input type="text" class="form-control" id="name" @bind="Name" required />
                            </div>

                            <div class="col-md-6">
                                <label for="email" class="form-label text-light">@Localization["Booking_Email_Label"]</label>
                                <input type="email" class="form-control" id="email" @bind="Email" required />
                            </div>

                            <div class="col-md-6">
                                <label for="phone" class="form-label text-light">@Localization["Booking_Phone_Label"]</label>
                                <input type="tel" class="form-control" id="phone" @bind="Phone" required />
                            </div>

                            <div class="col-md-6">
                                <label for="age" class="form-label text-light">@Localization["Booking_Age_Label"]</label>
                                <input type="number" class="form-control" id="age" @bind="Age" min="18" required />
                                <small class="text-muted">@Localization["Booking_Age_Min"]</small>
                            </div>

                            <!-- Appointment Details -->
                            <div class="col-12 mt-4">
                                <h2 class="h5 mb-3" style="color: #d4af37;">
                                    <i class="fas fa-calendar me-2"></i>@Localization["Booking_Appointment_Title"]
                                </h2>
                            </div>

                            <div class="col-md-6">
                                <label for="preferredDate" class="form-label text-light">@Localization["Booking_Date_Label"]</label>
                                <input type="text" class="form-control" id="preferredDate" @bind="PreferredDate" placeholder="YYYY-MM-DD" required />
                            </div>

                            <div class="col-md-6">
                                <label for="preferredTime" class="form-label text-light">@Localization["Booking_Time_Label"]</label>
                                <select class="form-control" id="preferredTime" @bind="PreferredTime">
                                    <option value="">@Localization["Booking_Time_Select"]</option>
                                    <option value="10:00">10:00 AM</option>
                                    <option value="11:00">11:00 AM</option>
                                    <option value="12:00">12:00 PM</option>
                                    <option value="13:00">1:00 PM</option>
                                    <option value="14:00">2:00 PM</option>
                                    <option value="15:00">3:00 PM</option>
                                    <option value="16:00">4:00 PM</option>
                                    <option value="17:00">5:00 PM</option>
                                </select>
                            </div>

                            <!-- Tattoo Details -->
                            <div class="col-12 mt-4">
                                <h2 class="h5 mb-3" style="color: #d4af37;">
                                    <i class="fas fa-paint-brush me-2"></i>@Localization["Booking_Tattoo_Title"]
                                </h2>
                            </div>

                            <div class="col-md-6">
                                <label for="tattooStyle" class="form-label text-light">@Localization["Booking_Style_Label"]</label>
                                <select class="form-control" id="tattooStyle" @bind="TattooStyle">
                                    <option value="">@Localization["Booking_Style_Select"]</option>
                                    <option value="Realistic">Realistic</option>
                                    <option value="Traditional">Traditional</option>
                                    <option value="Blackwork">Blackwork</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label for="tattooSize" class="form-label text-light">@Localization["Booking_Size_Label"]</label>
                                <select class="form-control" id="tattooSize" @bind="TattooSize">
                                    <option value="">@Localization["Booking_Size_Select"]</option>
                                    <option value="Small (up to 5cm)">@Localization["Booking_Size_Small"]</option>
                                    <option value="Medium (5-15cm)">@Localization["Booking_Size_Medium"]</option>
                                    <option value="Large (15cm+)">@Localization["Booking_Size_Large"]</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label for="placement" class="form-label text-light">@Localization["Booking_Placement_Label"]</label>
                                <input type="text" class="form-control" id="placement" @bind="Placement" placeholder="@Localization["Booking_Placement_Placeholder"]" />
                            </div>

                            <div class="col-12">
                                <label for="description" class="form-label text-light">@Localization["Booking_Description_Label"]</label>
                                <textarea class="form-control" id="description" rows="5" @bind="Description" 
                                          placeholder="@Localization["Booking_Description_Placeholder"]" required></textarea>
                            </div>

                            <!-- Additional Information -->
                            <div class="col-12">
                                <label for="comments" class="form-label text-light">@Localization["Booking_Comments_Label"]</label>
                                <textarea class="form-control" id="comments" rows="3" @bind="Comments" 
                                          placeholder="@Localization["Booking_Comments_Placeholder"]"></textarea>
                            </div>

                            <!-- Deposit Information -->
                            <div class="col-12 mt-4">
                                <div class="alert alert-info" style="background: rgba(212, 175, 55, 0.1); border-left: 4px solid #d4af37;">
                                    <h3 class="h6 text-warning mb-2">
                                        <i class="fas fa-info-circle me-2"></i>@Localization["Booking_Deposit_Title"]
                                    </h3>
                                    <p class="text-muted small mb-0">
                                        @Localization["Booking_Deposit_Text"]
                                    </p>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12">
                                <button type="submit" class="btn btn-gold w-100 py-3 rounded-pill" disabled="@IsSubmitting">
                                    @if (IsSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <text>@Localization["Booking_Btn_Sending"]</text>
                                    }
                                    else
                                    {
                                        <i class="fas fa-calendar-check me-2"></i>
                                        <text>@Localization["Booking_Btn_Request"]</text>
                                    }
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Contact Alternative -->
            <div class="text-center mt-4">
                <p class="text-muted">
                    @Localization["Booking_CallUs"] <a href="tel:+491722487670" class="text-warning">+49 172 2487670</a>
                </p>
            </div>
        </div>
    </div>
</div>



@code {
    private string Name = "";
    private string Email = "";
    private string Phone = "";
    private int? Age;
    private string PreferredDate = "";
    private string PreferredTime = "";
    private string TattooStyle = "";
    private string TattooSize = "";
    private string Placement = "";
    private string Description = "";
    private string Comments = "";
    private bool IsSubmitting = false;
    private bool ShowSuccessMessage = false;
    private bool ShowErrorMessage = false;

    protected override void OnInitialized()
    {
        Localization.OnCultureChanged += StateHasChanged;
    }

    public void Dispose()
    {
        Localization.OnCultureChanged -= StateHasChanged;
    }

    private async Task HandleSubmit()
    {
        IsSubmitting = true;
        ShowSuccessMessage = false;
        ShowErrorMessage = false;

        try
        {
            // EmailJS integration
            var templateParams = new
            {
                from_name = Name,
                from_email = Email,
                phone = Phone,
                age = Age,
                preferred_date = PreferredDate,
                preferred_time = PreferredTime,
                tattoo_style = TattooStyle,
                tattoo_size = TattooSize,
                placement = Placement,
                description = Description,
                comments = Comments,
                to_name = "Klod Tattoo Studio"
            };

            await JS.InvokeVoidAsync("emailjs.send", 
                "YOUR_SERVICE_ID", // Replace with your EmailJS service ID
                "YOUR_BOOKING_TEMPLATE_ID", // Replace with your EmailJS booking template ID
                templateParams);

            ShowSuccessMessage = true;
            // Clear form
            Name = "";
            Email = "";
            Phone = "";
            Age = null;
            PreferredDate = "";
            PreferredTime = "";
            TattooStyle = "";
            TattooSize = "";
            Placement = "";
            Description = "";
            Comments = "";
        }
        catch (Exception)
        {
            ShowErrorMessage = true;
        }
        finally
        {
            IsSubmitting = false;
        }
    }
}
