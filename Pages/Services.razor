@page "/services"

<PageTitle>Services - Klod Tattoo</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-uppercase" style="color: #d4af37;">Services</h1>
        <p class="lead text-muted">Professional tattoo services tailored to your needs</p>
        <div style="width: 60px; height: 3px; background-color: #d4af37; margin: 20px auto;"></div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="service-card text-center p-4 h-100 rounded shadow-lg" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-top: 4px solid #d4af37;">
                <i class="fas fa-pencil-alt fa-3x mb-3" style="color: #d4af37;"></i>
                <h3 class="h5 mb-3 text-light">Custom Tattoos</h3>
                <p class="text-muted small">Unique designs created specifically for you</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="service-card text-center p-4 h-100 rounded shadow-lg" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-top: 4px solid #d4af37;">
                <i class="fas fa-repeat fa-3x mb-3" style="color: #d4af37;"></i>
                <h3 class="h5 mb-3 text-light">Cover Ups</h3>
                <p class="text-muted small">Transform old tattoos into new masterpieces</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="service-card text-center p-4 h-100 rounded shadow-lg" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-top: 4px solid #d4af37;">
                <i class="fas fa-brush fa-3x mb-3" style="color: #d4af37;"></i>
                <h3 class="h5 mb-3 text-light">Touch-Ups</h3>
                <p class="text-muted small">Restore and refresh your existing tattoos</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="service-card text-center p-4 h-100 rounded shadow-lg" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border-top: 4px solid #d4af37;">
                <i class="fas fa-comments fa-3x mb-3" style="color: #d4af37;"></i>
                <h3 class="h5 mb-3 text-light">Consultation</h3>
                <p class="text-muted small">Free consultation to plan your perfect tattoo</p>
            </div>
        </div>
    </div>
</div>

<style>
    .service-card {
        transition: all 0.3s ease;
    }
    .service-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(212, 175, 55, 0.3) !important;
    }
</style>
