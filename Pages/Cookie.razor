@page "/cookie"
@inject KlodTattooBlazor.Services.LocalizationService Localization
@implements IDisposable

<PageTitle>@Localization["Cookie_PageTitle"] - Klod Tattoo Studio</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-uppercase mb-3" style="color: #d4af37;">@Localization["Cookie_Title"]</h1>
        <p class="lead text-muted">@Localization["Cookie_Subtitle"]</p>
        <div class="golden-underline mx-auto mt-3" style="width: 80px; height: 4px; background-color: #d4af37;"></div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 p-4" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                <div class="card-body">
                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-cookie-bite me-2"></i>@Localization["Cookie_Section1_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Cookie_Section1_Text"]
                        </p>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-list me-2"></i>@Localization["Cookie_Section2_Title"]
                        </h2>
                        
                        <div class="cookie-type-card mb-3 p-4 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #28a745;">
                            <h3 class="h6 text-light mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>@Localization["Cookie_Type1_Title"]
                            </h3>
                            <p class="text-muted small mb-0">
                                @Localization["Cookie_Type1_Text"]
                            </p>
                        </div>

                        <div class="cookie-type-card mb-3 p-4 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                            <h3 class="h6 text-light mb-2">
                                <i class="fas fa-chart-line text-warning me-2"></i>@Localization["Cookie_Type2_Title"]
                            </h3>
                            <p class="text-muted small mb-0">
                                @Localization["Cookie_Type2_Text"]
                            </p>
                        </div>

                        <div class="cookie-type-card mb-3 p-4 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #17a2b8;">
                            <h3 class="h6 text-light mb-2">
                                <i class="fas fa-sliders-h text-info me-2"></i>@Localization["Cookie_Type3_Title"]
                            </h3>
                            <p class="text-muted small mb-0">
                                @Localization["Cookie_Type3_Text"]
                            </p>
                        </div>

                        <div class="cookie-type-card p-4 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #6c757d;">
                            <h3 class="h6 text-light mb-2">
                                <i class="fas fa-bullhorn text-secondary me-2"></i>@Localization["Cookie_Type4_Title"]
                            </h3>
                            <p class="text-muted small mb-0">
                                @Localization["Cookie_Type4_Text"]
                            </p>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-cog me-2"></i>@Localization["Cookie_Section3_Title"]
                        </h2>
                        <p class="text-muted lh-lg mb-3">
                            @Localization["Cookie_Section3_Intro"]
                        </p>
                        <ul class="text-muted lh-lg">
                            <li class="mb-2"><strong>@Localization["Cookie_Section3_Item1_Title"]</strong> @Localization["Cookie_Section3_Item1_Text"]</li>
                            <li class="mb-2"><strong>@Localization["Cookie_Section3_Item2_Title"]</strong> @Localization["Cookie_Section3_Item2_Text"]</li>
                            <li class="mb-2"><strong>@Localization["Cookie_Section3_Item3_Title"]</strong> @Localization["Cookie_Section3_Item3_Text"]</li>
                        </ul>
                        <div class="alert alert-warning mt-3" style="background: rgba(255, 193, 7, 0.1); border-left: 4px solid #ffc107;">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>@Localization["Cookie_Section3_Note_Title"]</strong>
                            @Localization["Cookie_Section3_Note_Text"]
                        </div>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-external-link-alt me-2"></i>@Localization["Cookie_Section4_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Cookie_Section4_Intro"]
                        </p>
                        <ul class="text-muted lh-lg">
                            <li class="mb-2"><strong>@Localization["Cookie_Section4_Item1_Title"]</strong> @Localization["Cookie_Section4_Item1_Text"]</li>
                            <li class="mb-2"><strong>@Localization["Cookie_Section4_Item2_Title"]</strong> @Localization["Cookie_Section4_Item2_Text"]</li>
                            <li class="mb-2"><strong>@Localization["Cookie_Section4_Item3_Title"]</strong> @Localization["Cookie_Section4_Item3_Text"]</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-clock me-2"></i>@Localization["Cookie_Section5_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Cookie_Section5_Intro"]
                        </p>
                        <ul class="text-muted lh-lg">
                            <li class="mb-2"><strong>@Localization["Cookie_Section5_Item1_Title"]</strong> @Localization["Cookie_Section5_Item1_Text"]</li>
                            <li class="mb-2"><strong>@Localization["Cookie_Section5_Item2_Title"]</strong> @Localization["Cookie_Section5_Item2_Text"]</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-sync-alt me-2"></i>@Localization["Cookie_Section6_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Cookie_Section6_Text"]
                        </p>
                        <p class="text-muted small"><strong>@Localization["Cookie_LastUpdated"]</strong> @Localization["Cookie_Date"]</p>
                    </section>

                    <section>
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-question-circle me-2"></i>@Localization["Cookie_Section7_Title"]
                        </h2>
                        <p class=" text-muted lh-lg">
                            @Localization["Cookie_Section7_Text"]
                        </p>
                        <div class="mt-3 p-3 rounded" style="background: rgba(212, 175, 55, 0.1);">
                            <p class="text-light mb-0"><strong>@Localization["Cookie_Email_Label"]</strong> b.klodtattoo@gmail.com</p>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="/" class="btn btn-outline-gold px-5 py-3 rounded-pill">
            <i class="fas fa-home me-2"></i>@Localization["Cookie_BackToHome"]
        </a>
    </div>
</div>

<style>
    .btn-outline-gold {
        background: transparent;
        border: 2px solid #d4af37;
        color: #d4af37;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-gold:hover {
        background: #d4af37;
        color: #000;
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(212, 175, 55, 0.4);
    }

    .cookie-type-card {
        transition: all 0.3s ease;
    }

    .cookie-type-card:hover {
        background: rgba(212, 175, 55, 0.15) !important;
        transform: translateX(10px);
    }
</style>

@code {
    protected override void OnInitialized()
    {
        Localization.OnCultureChanged += StateHasChanged;
    }

    public void Dispose()
    {
        Localization.OnCultureChanged -= StateHasChanged;
    }
}
