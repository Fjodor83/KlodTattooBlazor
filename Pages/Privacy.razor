@page "/privacy"
@inject KlodTattooBlazor.Services.LocalizationService Localization
@implements IDisposable

<PageTitle>@Localization["Privacy_PageTitle"] - Klod Tattoo Studio</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-uppercase mb-3" style="color: #d4af37;">@Localization["Privacy_Title"]</h1>
        <p class="lead text-muted">@Localization["Privacy_Subtitle"]</p>
        <div class="golden-underline mx-auto mt-3" style="width: 80px; height: 4px; background-color: #d4af37;"></div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 p-4" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                <div class="card-body">
                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-shield-alt me-2"></i>@Localization["Privacy_Section1_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Privacy_Section1_Text"]
                        </p>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-database me-2"></i>@Localization["Privacy_Section2_Title"]
                        </h2>
                        <p class="text-muted lh-lg mb-3">
                            @Localization["Privacy_Section2_Intro"]
                        </p>
                        <ul class="text-muted lh-lg">
                            <li class="mb-2">@Localization["Privacy_Section2_Item1"]</li>
                            <li class="mb-2">@Localization["Privacy_Section2_Item2"]</li>
                            <li class="mb-2">@Localization["Privacy_Section2_Item3"]</li>
                            <li class="mb-2">@Localization["Privacy_Section2_Item4"]</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-cogs me-2"></i>@Localization["Privacy_Section3_Title"]
                        </h2>
                        <p class="text-muted lh-lg mb-3">
                            @Localization["Privacy_Section3_Intro"]
                        </p>
                        <ul class="text-muted lh-lg">
                            <li class="mb-2">@Localization["Privacy_Section3_Item1"]</li>
                            <li class="mb-2">@Localization["Privacy_Section3_Item2"]</li>
                            <li class="mb-2">@Localization["Privacy_Section3_Item3"]</li>
                            <li class="mb-2">@Localization["Privacy_Section3_Item4"]</li>
                            <li class="mb-2">@Localization["Privacy_Section3_Item5"]</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-cookie-bite me-2"></i>@Localization["Privacy_Section4_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Privacy_Section4_Text"] <a href="/cookie" class="text-warning">@Localization["Privacy_Section4_Link"]</a> @Localization["Privacy_Section4_TextPost"]
                        </p>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-lock me-2"></i>@Localization["Privacy_Section5_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Privacy_Section5_Text"]
                        </p>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-user-check me-2"></i>@Localization["Privacy_Section6_Title"]
                        </h2>
                        <p class="text-muted lh-lg mb-3">
                            @Localization["Privacy_Section6_Intro"]
                        </p>
                        <ul class="text-muted lh-lg">
                            <li class="mb-2">@Localization["Privacy_Section6_Item1"]</li>
                            <li class="mb-2">@Localization["Privacy_Section6_Item2"]</li>
                            <li class="mb-2">@Localization["Privacy_Section6_Item3"]</li>
                            <li class="mb-2">@Localization["Privacy_Section6_Item4"]</li>
                            <li class="mb-2">@Localization["Privacy_Section6_Item5"]</li>
                            <li class="mb-2">@Localization["Privacy_Section6_Item6"]</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-share-alt me-2"></i>@Localization["Privacy_Section7_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Privacy_Section7_Text"]
                        </p>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-edit me-2"></i>@Localization["Privacy_Section8_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Privacy_Section8_Text"]
                        </p>
                        <p class="text-muted small"><strong>@Localization["Privacy_LastUpdated"]</strong> @Localization["Privacy_Date"]</p>
                    </section>

                    <section>
                        <h2 class="h4 mb-3" style="color: #d4af37;">
                            <i class="fas fa-envelope me-2"></i>@Localization["Privacy_Contact_Title"]
                        </h2>
                        <p class="text-muted lh-lg">
                            @Localization["Privacy_Contact_Text"]
                        </p>
                        <div class="mt-3 p-3 rounded" style="background: rgba(212, 175, 55, 0.1);">
                            <p class="text-light mb-2"><strong>@Localization["Privacy_Email_Label"]</strong> b.klodtattoo@gmail.com</p>
                            <p class="text-light mb-2"><strong>@Localization["Privacy_Phone_Label"]</strong> +49 172 2487670</p>
                            <p class="text-light mb-0"><strong>@Localization["Privacy_Address_Label"]</strong> Lindenstra√üe 26, 63785 Obernburg am Main, Germany</p>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="/" class="btn btn-outline-gold px-5 py-3 rounded-pill">
            <i class="fas fa-home me-2"></i>@Localization["Privacy_BackToHome"]
        </a>
    </div>
</div>



@code {
    protected override void OnInitialized()
    {
        Localization.OnCultureChanged += StateHasChanged;
    }

    public void Dispose()
    {
        Localization.OnCultureChanged -= StateHasChanged;
    }
}
